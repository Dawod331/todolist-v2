<%- include("header") -%>

<div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
</div>
<div class="box">

    <% newListItems.forEach(function(iteme){%>
    <!--      علينا تحديد اين يريد ان يعمل بوست-->
    <form action="/delete" method="post">
        <div class="item">
<!--            اضفنا onChange="this.form.submit()" لكي يستجيب لنا عندما مضع اشارة صح على البوكس-->
<!--             في console و اضفنا value لكي نعرف id القيمة التي تم تحديدها في الcheckbox-->
            <input name="checkbox" type="checkbox" value="<%=iteme._id%>" onChange="this.form.submit()">
            <p><%=iteme.name%></p>
        </div>
    </form>
    <% });%>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list">+</button>
    </form>
</div>

<%- include("footer") -%>
